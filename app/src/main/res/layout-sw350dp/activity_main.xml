<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pitchBlack"
    tools:context="com.quintlr.speedometer.MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <View
        android:id="@+id/separator_adview"
        android:layout_width="fill_parent"
        android:layout_above="@id/ad_view"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <ImageButton
        android:id="@+id/curr_location"
        android:contentDescription="Current Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/separator_adview"
        android:src="@drawable/current_location_white"
        />

    <ImageButton
        android:id="@+id/search_btn"
        android:contentDescription="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/separator_adview"
        android:layout_toRightOf="@id/curr_location"
        android:layout_toEndOf="@id/curr_location"
        android:src="@drawable/search_icon"
        />

    <ImageButton
        android:id="@+id/map_type"
        android:contentDescription="Map Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/separator_adview"
        android:layout_toRightOf="@id/search_btn"
        android:layout_toEndOf="@id/search_btn"
        android:src="@drawable/map_type_white"
        />

    <ImageButton
        android:id="@+id/zoom_out"
        android:contentDescription="Zoom Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/separator_adview"
        android:layout_toEndOf="@id/map_type"
        android:src="@drawable/zoom_out_map"
        android:layout_toRightOf="@id/map_type" />

    <ImageButton
        android:id="@+id/settingsbtn"
        android:contentDescription="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/separator_adview"
        android:src="@drawable/settings_icon"
        android:layout_toEndOf="@id/zoom_out"
        android:layout_toRightOf="@id/zoom_out"
        />

    <View
        android:id="@+id/separator_toggles"
        android:layout_width="fill_parent"
        android:layout_above="@id/curr_location"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <!-- Odometer -->
    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/odometerbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator_toggles"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/lcdbg"
        android:textSize="30sp"
        android:text="~~~~~"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/odometerbg"
        android:layout_alignStart="@id/odometerbg"
        android:layout_alignTop="@id/odometerbg"
        android:layout_alignRight="@id/odometerbg"
        android:layout_alignEnd="@id/odometerbg"
        android:gravity="end"
        android:textSize="30sp"
        android:text="-----"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/odometerunitsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/odometerbg"
        android:layout_toRightOf="@id/odometerbg"
        android:layout_toEndOf="@id/odometerbg"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:textColor="@color/lcdbg"
        android:text="~~"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/odometerunits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/odometerunitsbg"
        android:layout_alignStart="@id/odometerunitsbg"
        android:layout_alignTop="@id/odometerunitsbg"
        android:textSize="20sp"
        android:text="km"
        />

    <Button
        android:id="@+id/reset_btn"
        android:contentDescription="Reset"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/separator_toggles"
        android:padding="0dp"
        android:textColor="@color/pitchBlack"
        android:background="@drawable/reset_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="RESET"
        />

    <View
        android:id="@+id/separator_odo"
        android:layout_width="fill_parent"
        android:layout_above="@id/odometerbg"
        android:layout_marginBottom="15dp"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <!-- Speedometer -->
    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/speedounitsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/odometerbg"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/lcdbg"
        android:textSize="25sp"
        android:text="~~~~~"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/speedounits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/speedounitsbg"
        android:layout_alignStart="@id/speedounitsbg"
        android:layout_alignRight="@id/speedounitsbg"
        android:layout_alignEnd="@id/speedounitsbg"
        android:layout_alignTop="@id/speedounitsbg"
        android:textSize="25sp"
        android:text="km/hr"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/speedobg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/speedounitsbg"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="70sp"
        android:text="~~~~"
        android:textColor="@color/lcdbg"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/speedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/speedobg"
        android:layout_alignRight="@id/speedobg"
        android:layout_alignEnd="@id/speedobg"
        android:layout_alignLeft="@id/speedobg"
        android:layout_alignStart="@id/speedobg"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="70sp"
        android:text="----"
        />

    <View
        android:id="@+id/separator_speedo"
        android:layout_width="fill_parent"
        android:layout_above="@id/speedobg"
        android:layout_marginBottom="15dp"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_above="@id/separator_speedo"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:text="Position : (00.00, 00.00)"
        />


    <View
        android:id="@+id/separator_lat_long"
        android:layout_width="fill_parent"
        android:layout_above="@id/position"
        android:layout_marginBottom="10dp"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <View
        android:id="@+id/divider_pos_alt"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_lat_long"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toRightOf="@id/position"
        android:layout_toEndOf="@id/position"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/pureWhite"/>

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_alignBaseline="@id/position"
        android:layout_toRightOf="@id/divider_pos_alt"
        android:layout_toEndOf="@id/divider_pos_alt"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="Alt : 0 m"
        />

    <View
        android:id="@+id/divider_alt_dir"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_lat_long"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toRightOf="@id/altitude"
        android:layout_toEndOf="@id/altitude"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/pureWhite"/>

    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_alignBaseline="@id/position"
        android:layout_toRightOf="@id/divider_alt_dir"
        android:layout_toEndOf="@id/divider_alt_dir"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:text="Dir : NA"
        />

    <ImageButton
        android:id="@+id/more_info"
        android:contentDescription="More Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="35dp"
        android:padding="0dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/separator_lat_long"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/info_box"
        />

    <View
        android:id="@+id/divider_alt_info"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_lat_long"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toLeftOf="@id/more_info"
        android:layout_toStartOf="@id/more_info"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/pureWhite"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_pos_alt"
        class="com.google.android.gms.maps.SupportMapFragment" />



</RelativeLayout>
