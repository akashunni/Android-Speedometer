<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pitchBlack"
    tools:context="com.quintlr.speedometer.MainActivity">


    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="500dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <View
        android:id="@+id/separator_middle"
        android:layout_height="match_parent"
        android:layout_width="2dp"
        android:layout_toLeftOf="@id/ad_view"
        android:background="@color/pureWhite"/>

    <View
        android:id="@+id/separator_bottom"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/separator_middle"
        android:background="@color/pureWhite"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ad_view"
        android:layout_toRightOf="@id/separator_middle"
        class="com.google.android.gms.maps.SupportMapFragment" />


    <View
        android:id="@+id/separator_adview"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_above="@id/separator_bottom"
        android:layout_marginBottom="55dp"
        android:layout_alignRight="@id/separator_middle"
        android:background="@color/pureWhite"/>

    <ImageButton
        android:id="@+id/settingsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/separator_bottom"
        android:layout_alignRight="@id/separator_middle"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/settings_icon"
        />

    <ImageButton
        android:id="@+id/zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_above="@id/separator_bottom"
        android:layout_toLeftOf="@id/settingsbtn"
        android:src="@drawable/zoom_out_map"
        />

    <ImageButton
        android:id="@+id/map_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_above="@id/separator_bottom"
        android:layout_toLeftOf="@id/zoom_out"
        android:src="@drawable/map_type_white"
        />

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_above="@id/separator_bottom"
        android:layout_toLeftOf="@id/map_type"
        android:src="@drawable/search_icon"
        />



    <ImageButton
        android:id="@+id/curr_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_above="@id/separator_bottom"
        android:layout_toLeftOf="@id/search_btn"
        android:src="@drawable/current_location_white"
        />

    <!--ImageButton
        android:id="@+id/gpsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/separator_bottom"
        android:layout_toLeftOf="@id/curr_location"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/gps_icon"
        /-->

    <!-- Odometer -->
    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/odometerbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator_adview"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/lcdbg"
        android:textSize="48sp"
        android:text="~~~~~"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/odometerbg"
        android:layout_alignTop="@id/odometerbg"
        android:layout_alignRight="@id/odometerbg"
        android:gravity="right"
        android:textSize="48sp"
        android:text="-----"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/odometerunitsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/odometerbg"
        android:layout_toRightOf="@id/odometerbg"
        android:layout_marginLeft="10.5dp"
        android:textSize="30sp"
        android:textColor="@color/lcdbg"
        android:text="~~"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/odometerunits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/odometerunitsbg"
        android:layout_alignTop="@id/odometerunitsbg"
        android:textSize="30sp"
        android:text="km"
        />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:textColor="@color/pitchBlack"
        android:textSize="15sp"
        android:layout_alignBottom="@id/separator_adview"
        android:padding="0dp"
        android:background="@drawable/reset_button"
        android:layout_toLeftOf="@id/separator_middle"
        android:text="RESET"
        />

    <View
        android:id="@+id/separator_odo"
        android:layout_width="wrap_content"
        android:layout_above="@id/odometerbg"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@id/separator_middle"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <!-- Speedometer -->
    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/speedounitsbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator_odo"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22.5dp"
        android:textColor="@color/lcdbg"
        android:textSize="30sp"
        android:text="~~~~~"
        />

    <com.quintlr.speedometer.UnitsTextView
        android:id="@+id/speedounits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/speedounitsbg"
        android:layout_alignRight="@id/speedounitsbg"
        android:layout_alignTop="@id/speedounitsbg"
        android:textSize="30sp"
        android:text="km/hr"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/speedobg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/speedounitsbg"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="97.5sp"
        android:text="~~~~"
        android:textColor="@color/lcdbg"
        />

    <com.quintlr.speedometer.ValuesTextView
        android:id="@+id/speedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/speedobg"
        android:layout_alignRight="@id/speedobg"
        android:layout_alignLeft="@id/speedobg"
        android:gravity="right"
        android:singleLine="true"
        android:textSize="97.5sp"
        android:text="----"
        />

    <View
        android:id="@+id/separator_speedo"
        android:layout_width="wrap_content"
        android:layout_above="@id/speedobg"
        android:layout_alignRight="@id/separator_middle"
        android:layout_marginBottom="45dp"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <!--position -->

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_above="@id/separator_speedo"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:text="Position : (00.00, 00.00)"
        />


    <View
        android:id="@+id/separator_pos_alt_dir"
        android:layout_width="wrap_content"
        android:layout_above="@id/position"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@id/separator_middle"
        android:layout_height="2dp"
        android:background="@color/pureWhite"/>

    <View
        android:id="@+id/divider_pos_alt"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_pos_alt_dir"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toRightOf="@id/position"
        android:layout_marginLeft="15dp"
        android:background="@color/pureWhite"/>

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_alignBaseline="@id/position"
        android:layout_toRightOf="@id/divider_pos_alt"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:text="Alt : 0 m"
        />

    <View
        android:id="@+id/divider_alt_dir"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_pos_alt_dir"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toRightOf="@id/altitude"
        android:layout_marginLeft="15dp"
        android:background="@color/pureWhite"/>

    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:layout_alignBaseline="@id/position"
        android:layout_toRightOf="@id/divider_alt_dir"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:text="Dir : NA"
        />

    <ImageButton
        android:id="@+id/more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="35dp"
        android:padding="0dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignTop="@id/separator_pos_alt_dir"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toLeftOf="@id/separator_middle"
        android:layout_marginRight="5dp"
        android:src="@drawable/info_box"
        />


    <View
        android:id="@+id/divider_alt_info"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/separator_pos_alt_dir"
        android:layout_alignBottom="@id/separator_speedo"
        android:layout_toLeftOf="@id/more_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/pureWhite"/>

</RelativeLayout>
