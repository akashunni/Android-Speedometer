<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/pitchBlack"
    tools:context="com.akashunni.speedometer.Activities.Instructions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/instructions_hello"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:textColor="@color/pureWhite"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions_button"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/pitchBlack"
        android:background="@drawable/instructions_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:id="@+id/instructions_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_above="@id/instructions_btn">
        <include layout="@layout/instructions_content"/>
    </ScrollView>

</RelativeLayout>
